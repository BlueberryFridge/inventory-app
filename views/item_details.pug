extends layout

block content
    
    script.    
        function handlePopup() { const element = document.getElementById('delete-item'); element.setAttribute('style', 'display: flex'); }
        function handleCancel() { const element = document.getElementById('delete-item'); element.setAttribute('style', 'display: none'); }

    .popup-delete#delete-item
        .window-delete    
            p Are you sure you want to delete this item?
            .btn-del-container    
                button.btn.btn-primary(onclick='handleCancel()') No
                a(href=`/inventory/${item_details._id}/delete`)
                    button.btn.btn-danger Yes       
   
    button#btn-delete.btn.btn-danger(style='padding: 5px 30px; margin-top: 50px; float: right', onclick='handlePopup()') Delete
    
    h1= title
    
    p
        a(href=item_details.category.url)= item_details.category.name
    hr
    p #[strong Price:] Php #{item_details.price}
    p #[strong Number in stock:] #{item_details.number_in_stock}
    
    dl
        dt Description:
        dd= item_details.description
    
        
    a(href=`/inventory/${item_details._id}/update`)
        button#btn-update.btn.btn-warning(style='padding: 5px 40px') Update