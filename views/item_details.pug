extends layout

block content 
        
    .modal.fade#deleteModal(role='dialog')
        .modal-dialog(role='content')
            .modal-content
                .modal-header
                    .modal-title 
                        h4 Are you sure?
                .modal-body
                    p Are you sure you want to delete this item?
                    .form-row
                        .col.text-right
                            a.btn.btn-outline-danger.btn-sm.mr-1(role='button' href=`/inventory/${item_details._id}/delete`) Delete
                            a.btn.btn-outline-secondary.btn-sm(role='button' data-dismiss='modal') Cancel     
   
    button#deleteButton.btn.btn-danger(style='padding: 5px 30px; margin-top: 50px; float: right') Delete
    
    h1= title
    
    p
        a(href=item_details.category.url)= item_details.category.name
    hr
    p #[strong Price:] Php #{item_details.price}
    p #[strong Number in stock:] #{item_details.number_in_stock}
    
    dl
        dt Description:
        dd= item_details.description
    
        
    a(href=`/inventory/${item_details._id}/update`)
        button#btn-update.btn.btn-warning(style='padding: 5px 40px') Update